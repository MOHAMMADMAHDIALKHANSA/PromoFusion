@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
<style>

	body {
		background-image: url('https://convertingcolors.com/radial-008374.svg'); /* Set the background image of the page */
		background-size: cover; /* Cover the entire background */
		background-repeat: no-repeat; /* Do not repeat the background image */
	}

	.btn {
		margin-top: 10px;
		margin-right: 5px; /* Added margin between buttons */
		font-size: 16px;
		padding: 10px 20px;
		background-color: #fd5f00;
		color: #fff;
		border: 2px solid #fd5f00;
		border-radius: 25px;
		transition: all 0.3s ease;
	}


		.btn:hover {
			background-color: #fff;
			color: #fd5f00;
			border: 2px solid #fd5f00;
		}

</style>
<partial name="_StatusMessage" for="StatusMessage" />
<h3 style="color: var(--color-primary);">@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
	<p style="color: var(--color-primary);">
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Put these codes in a safe place.</strong>
    </p>
	<p style="color: var(--color-primary);">
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
	<p style="color: var(--color-primary);">
        Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a>
    </p>
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">Generate Recovery Codes</button>
    </form>
</div>
