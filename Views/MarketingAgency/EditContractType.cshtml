@model MarketingHub.Models.MarketingAgencyContractType
<script src="~/assets/js/main.js"></script>

<style>
    body {
        background-image: url('https://convertingcolors.com/radial-008374.svg'); /* Set the background image of the page */
        background-size: cover; /* Cover the entire background */
        background-repeat: no-repeat; /* Do not repeat the background image */
    }

    .btn {
        margin-top: 10px;
        margin-right: 5px;
        font-size: 16px;
        padding: 10px 20px;
        background-color: #008080;
        color: #fff;
        border: 2px solid #008080;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #fff;
            color: #008080;
        }
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header" style="background-color: #008374;">
            <h2 class="card-title text-white mb-0">Edit Contract Type</h2>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <form asp-action="EditContractType" method="post" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="newContractTypeId" style="color: var(--color-primary);">Select New Contract Type:</label>
                    <select id="newContractTypeId" name="newContractTypeId" class="form-control" style="color: var(--color-primary);">
                        @foreach (var item in ViewBag.AvailableContractTypes)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <input type="hidden" name="oldContractTypeId" value="@Model.ContractTypeId" />
                <div class="text-center mt-4">
                    <button type="submit" class="btn">Update</button>
                    <a asp-action="ContractTypes" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
