@model MarketingHub.Models.Report

@{
    ViewData["Title"] = "Refute Report";
}

<style>
    body {
        background-image: url('https://convertingcolors.com/radial-008374.svg'); /* Set the background image of the page */
        background-size: cover; /* Cover the entire background */
        background-repeat: no-repeat; /* Do not repeat the background image */
    }

    .container {
        background-color: #008374; /* Set background color of the container */
        padding: 20px; /* Add padding for spacing */
        border-radius: 10px; /* Optional: Add rounded corners */
        margin-top: 20px; /* Optional: Adjust margin as needed */
        color: #ffffff; /* Set text color */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #fd5f00; /* Set button background color */
        color: #fff; /* Set button text color */
        border: none; /* Remove button border */
        border-radius: 25px; /* Optional: Add rounded corners to the button */
        padding: 10px 20px; /* Button padding */
        transition: all 0.3s ease; /* Smooth transition for button hover */
    }

        .btn-primary:hover {
            background-color: #ff9000; /* Button color on hover */
            color: #fff; /* Text color on hover */
        }
</style>

<div class="container">
    <h2>Refute Report</h2>

    <form asp-action="RefuteReport" method="post">
        <input type="hidden" asp-for="ReportId" />

        <div class="form-group">
            <label asp-for="RefutationDetails" class="control-label">Refutation Details:</label>
            <textarea asp-for="RefutationDetails" class="form-control" rows="5"></textarea>
            <span asp-validation-for="RefutationDetails" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
