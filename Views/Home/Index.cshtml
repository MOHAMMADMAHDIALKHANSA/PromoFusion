<style>
   
    .image-container {
        position: relative;
        display: inline-block;
    }

    .img-fluid {
        display: block;
        max-width: 100%;
        height: auto;
    }

    .portfolio-wrap {
        position: relative;
        overflow: hidden;
    }

    .portfolio-info {
