    .sections-bg {
        background-color: #f7f7f7;
        padding: 60px 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .recent-posts .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .recent-posts .col-xl-4, .recent-posts .col-md-6 {
        display: flex;
        flex: 0 0 auto;
        flex-direction: column;
        justify-content: stretch;
        margin-bottom: 20px;
    }

    .recent-posts article {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

    .recent-posts .post-img {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
    }

        .recent-posts .post-img .image-container {
            position: relative;
            width: 100%;
            height: 200px; /* Adjust the height as needed */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .recent-posts .post-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .recent-posts .play-btn {
        position: absolute;
        width: 94px;
        height: 94px;
        background: radial-gradient(var(--color-primary) 50%, rgba(0, 131, 116, 0.4) 52%);
        border-radius: 50%;
        display: block;
        left: calc(50% - 47px);
        top: calc(50% - 47px);
        overflow: hidden;
    }

        .recent-posts .play-btn:before {
            content: "";
            position: absolute;
            width: 120px;
            height: 120px;
            animation-delay: 0s;
            animation: pulsate-btn 2s infinite forwards steps;
            opacity: 1;
            border-radius: 50%;
            border: 5px solid rgba(0, 131, 116, 0.7);
            top: -15%;
            left: -15%;
            background: rgba(198, 16, 0, 0);
        }

        .recent-posts .play-btn:after {
            content: "";
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translateX(-40%) translateY(-50%);
            width: 0;
            height: 0;
            border-top: 10px solid transparent;
            border-bottom: 10px solid transparent;
            border-left: 15px solid #fff;
            z-index: 100;
            transition: all 400ms cubic-bezier(0.55, 0.055, 0.675, 0.19);
        }

        .recent-posts .play-btn:hover:before {
            animation: none;
            border-radius: 0;
        }

        .recent-posts .play-btn:hover:after {
            border-left: 15px solid var(--color-primary);
            transform: scale(20);
        }

    .recent-posts .title {
        margin: 10px 0;
        font-size: 18px;
        line-height: 1.4;
    }

    .recent-posts .post-meta {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        font-size: 14px;
        color: #666;
    }

</style>

