            <h2 style="color: var(--color-primary);">Recent Agencies Posts</h2>
        </div>
        <div class="row">
            @foreach (var post in randomPosts)
            {
                <div class="col-xl-4 col-md-6">
                    <article>
                        <div class="post-img">
                            <a href="@post.Content" target="_blank">
                                <div class="image-container">
                                    <div class="play-btn"></div>
                                    <img src="@post.picContent" alt="" class="img-fluid">
                                </div>
                            </a>
                        </div>
                        <p class="post-category">
                                @post.Caption
                        </p>
                        <div class="d-flex align-items-center">
                            <img src="@post.MarketingAgency.ImageUrl" alt="" class="img-fluid post-author-img flex-shrink-0">
                            <div class="post-meta">
                                <p class="post-author">@post.MarketingAgency.Username</p>
                                <p class="post-date">
                                    <time datetime="@post.CreatedAt.ToString("yyyy-MM-dd")">@post.CreatedAt.ToString("MMM dd, yyyy")</time>
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>


