@model MarketingHub.Models.Payment

@{
    ViewBag.Title = "Payment Success";
}

<div class="container-custom">
    <h2>Payment Successful</h2>
    <p>Thank you for your payment!</p>
    <p>Amount: @Model.Amount</p>
    <p>Payment Date: @Model.PaymentDate</p>
    <a href="/" class="btn-custom">Go to Home</a>
</div>

<style>
    .container-custom {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #008374;
        border-radius: 10px;
        color: #fff;
    }

    .btn-custom {
        background-color: #008374;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #005b53;
    }

        .container-custom {
            padding: 15px;
        }

        .btn-custom {
            width: 100%;
        }
    
</style>
