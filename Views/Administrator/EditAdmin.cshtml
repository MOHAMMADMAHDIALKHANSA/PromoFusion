@model MarketingHub.Models.Administrator

@{
    ViewData["Title"] = "Add Administrator";
}

<script src="~/assets/js/main.js"></script>

<style>
    body {
        background-image: url('https://convertingcolors.com/radial-008374.svg'); /* Set the background image of the page */
        background-size: cover; /* Cover the entire background */
        background-repeat: no-repeat; /* Do not repeat the background image */
    }

    .btn {
        margin-top: 10px;
        font-size: 16px;
        padding: 10px 20px;
        background-color: #008080;
        color: #fff;
        border: none;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background-color: #fd5f00;
            color: #fff;
        }

    .form-section {
        margin-bottom: 20px;
        border: 1px solid #e9ecef;
        padding: 20px;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

        .form-section h2 {
            margin-top: 0;
            margin-bottom: 20px;
            color: #007bff;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 5px;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .container h2 {
        color: var(--color-primary);
    }
</style>

<div class="container mt-4">
    <h2>Edit Administrator</h2>
    <hr />
    <form asp-action="ProcessEditAdmin" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-section">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label" style="color: var(--color-primary);"></label>
                <input asp-for="FirstName" class="form-control" style="color: var(--color-primary);" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label" style="color: var(--color-primary);"></label>
                <input asp-for="LastName" class="form-control" style="color: var(--color-primary);" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label" style="color: var(--color-primary);"></label>
                <input asp-for="Role" class="form-control" style="color: var(--color-primary);" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color: var(--color-primary);"></label>
                <input asp-for="Email" class="form-control" style="color: var(--color-primary);" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl" class="control-label" style="color: var(--color-primary);"></label>
                <input asp-for="ImgUrl" class="form-control" style="color: var(--color-primary);" />
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save Admin" class="btn btn-primary mt-4">Save Admin</button>
                <a asp-action="displayAdmin" class="btn btn-secondary">Cancel</a>
            </div>
            <input type="hidden" asp-for="UserId"></input>
            <input type="hidden" asp-for="AdministratorId"></input>
            <input type="hidden" asp-for="applicationUser"></input>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}