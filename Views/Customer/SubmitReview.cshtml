@model MarketingHub.Models.Review

<h2>Submit Review</h2>

<form asp-controller="Customer" asp-action="SubmitReview" method="post">
    <!-- Display validation errors, if any -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserReview"></label>
        <textarea asp-for="UserReview" class="form-control"></textarea>
        <span asp-validation-for="UserReview" class="text-danger"></span>
    </div>

    <!-- Add hidden field for CustomerId -->
    <input asp-for="CustomerId" type="hidden" />

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
